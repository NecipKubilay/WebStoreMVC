@model ProjeAdi.Models.Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Name" style="max-height: 400px; width: 100%; object-fit: contain;">
            }
            else
            {
                <img src="https://via.placeholder.com/400x400" class="img-fluid rounded shadow" alt="Ürün Görseli Yok">
            }
        </div>
        <div class="col-md-6">
            
            <h1 class="mb-3">@Model.Name</h1>
            <p class="text-muted mb-3">Kategori: @Model.Category.Ad</p>
            
            <div class="card mb-4">
                <div class="card-body">
                    <h3 class="text-primary mb-3">@Model.Price.ToString("C")</h3>
                    <p class="card-text">@Model.Description</p>
                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-shopping-cart"></i> Sepete Ekle
                        </button>
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Ürün Özellikleri</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success me-2"></i> Garanti: 2 Yıl</li>
                        <li><i class="fas fa-check text-success me-2"></i> Ücretsiz Kargo</li>
                        <li><i class="fas fa-check text-success me-2"></i> 14 Gün İade Garantisi</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div> 