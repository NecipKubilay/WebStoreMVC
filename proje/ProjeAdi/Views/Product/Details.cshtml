@model ProjeAdi.Models.Product

@{
    ViewData["Title"] = "Ürün Detayı";
}

<div class="container">
    <div class="row mt-4">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name">
            }
        </div>
        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <p class="text-muted">Kategori: @Model.Category.Ad</p>
            <hr />
            <p class="lead">@Model.Description</p>
            <h3 class="text-primary">@Model.Price.ToString("C")</h3>
            <div class="mt-4">
                <a asp-action="Index" class="btn btn-secondary">Ürün Listesine Dön</a>
            </div>
        </div>
    </div>
</div> 